          <jdk>1.7</jdk>
          <includesTestSourceRoots>false</includesTestSourceRoots>
          <flushPolicy>threaded</flushPolicy>
          <flushInterval>100</flushInterval>
          <targetPercentage>5%</targetPercentage>
